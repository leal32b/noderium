{
  "name": "noderium",
  "version": "1.0.0",
  "description": "Local-first note-taking app with bidirectional links and graph view. Built with Vite, Tauri, Rust, SolidJS and SQLite",
  "scripts": {
    "prepare": "husky",
    "app:dev": "pnpm --filter noderium-app tauri dev",
    "app:lint": "pnpm --filter noderium-app lint:fix",
    "app:test": "pnpm --filter noderium-app test:ci",
    "app:test:related": "pnpm --filter noderium-app test:related",
    "app:steiger": "pnpm --filter noderium-app steiger",
    "docs:dev": "pnpm --filter noderium-docs start",
    "build": "pnpm -r build",
    "release": "changeset tag",
    "ci:version": "changeset version && pnpm -r run sync-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leal32b/noderium.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/leal32b/noderium/issues"
  },
  "homepage": "https://github.com/leal32b/noderium#readme",
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3"
  }
}
